<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">employee.employee.form</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <header>
                    <button name="create_product" type="object" string="Create Product" class="btn-primary"
                            icon="fa-plus"/>
                </header>
                <sheet>
                    <group col="2">
                        <field name="name"/>
                    </group>
                    <group col="4">

                        <field name="amount"/>
                        <field name="department_id" domain="[('name', 'like', 'cs')]"/>
                        <field name="subject_ids" widget="many2many_tags"/>
                        <field name="result_employee_ids"/>
                        <field name="age"/>
                        <field name="date_of_birth"/>
                        <field name="is_employee"/>
                        <!--<field name="gender" widget="selection"/>-->
                        <field name="gender" widget="radio"/>
                        <field name="image" widget="image"/>


                    </group>
                    <notebook>
                        <page string="page1">
                            <group name="date" string="Date">
                                <field name="date_of_birth"/>
                            </group>

                        </page>
                        <page string="page2">
                            <group name="age" string="age">
                                <field name="age"/>

                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_employee_list" model="ir.ui.view">
        <field name="name">employee.employee.list</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <list string="Employee">
                <field name="name"/>
                <field name="amount"/>
                <field name="department_id"/>
                <field name="age"/>
                <field name="date_of_birth"/>
                <field name="is_employee"/>
                <field name="gender"/>

            </list>
        </field>
    </record>

    <record id="view_employee_search" model="ir.ui.view">
        <field name="name">employee.employee.search</field>
        <field name="model">employee.employee</field>
        <field name="arch" type="xml">
            <search string="Employee">
                <field name="name"/>
                <field name="department_id"/>
                <field name="date_of_birth"/>
            </search>
        </field>
    </record>
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">employee.employee</field>
        <field name="view_mode">list,form</field>
        <field name="view_mode">list,form,graph,pivot</field>
    </record>
    <menuitem id="menu_employee_root" name="General Service"/>
    <menuitem id="menu_employee" name="Employees" parent="menu_employee_root"/>
    <menuitem id="menu_employee_employee" name="Employees" parent="menu_employee" action="action_employee"/>


</odoo>
