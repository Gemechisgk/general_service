<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_material_distribution_report" model="ir.actions.report">
        <field name="name">Material Distribution Report</field>
        <field name="model">material.distribution</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">general_service.material_distribution_report_template</field>
        <field name="report_file">general_service.material_distribution_report_template</field>
        <field name="print_report_name">'Material Distribution - %s' % object.name</field>
        <field name="binding_model_id" ref="model_material_distribution"/>
        <field name="binding_type">report</field>
    </record>

    <template id="material_distribution_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h3>Material Distribution Report</h3>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6">
                            <strong>Reference:</strong> <span t-esc="o.name"/><br/>
                            <strong>Date:</strong> <span t-esc="o.date"/><br/>
                            <strong>Material:</strong> <span t-esc="o.material"/><br/>
                            <strong>Amount:</strong> <span t-esc="o.amount"/><br/>
                        </div>
                        <div class="col-6">
                            <strong>Notes:</strong> <span t-esc="o.notes"/><br/>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-12">
                            <h4>Employees who received the material:</h4>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.employee_table" t-as="row">
                                        <td><span t-esc="row['name']"/></td>
                                        <td><span t-esc="row['amount']"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo> 